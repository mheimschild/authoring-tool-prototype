margin = 10px
padding = 10px

html, body
  height 100%

#main
  width 100%
  height 100%

wrapper(width, float)
  height 100%
  width width
  float float

#wrapper-work
  wrapper(80%, left)

#wrapper-toolbar
  wrapper(20%, right)

container(color)
  border 1px solid grey
  height 100%
  background-color color
  margin 0 margin
  padding padding

#work
  container(#add8e6)

#toolbar
  container(#90ee90)