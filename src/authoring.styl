margin = 10px
padding = 10px

html, body
  height 100%

#main
  width 100%
  height 100%

wrapper(width, float)
  height 100%
  width width
  float float

#wrapper-work
  wrapper(80%, left)

#wrapper-toolbar
  wrapper(20%, right)

container(color)
  border 1px solid grey
  height 100%
  background-color color
  margin 0 margin
  padding padding

#work
  container(#add8e6)

#work_buttons
  overflow auto
  padding 0 10px

#clean
  float right

#toolbar
  container(#90ee90)

#drag_container
  margin 10px
  padding 10px
  border 1px dotted grey
  min-height 200px
  overflow auto

draggable(width, height, bg_img)
  cursor move
  margin-bottom 10px
  padding 3px
  width width
  height height
  background url(bg_img) no-repeat center
  background-color white

.text
  draggable(94px, 17px, 'img/text.png')

.text_field
  draggable(85px, 30px, 'img/text_field.png')

.checkbox
  draggable(166px, 92px, 'img/checkbox.png')